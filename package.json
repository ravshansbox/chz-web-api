{
  "name": "chz-web-api",
  "private": true,
  "scripts": {
    "build": "tsc",
    "migrate": "prisma db push",
    "start": "nodemon src"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@ravshansbox/mini-app": "^2.1.2",
    "path-to-regexp": "^6.2.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.1",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "nodemonConfig": {
    "events": {
      "start": "clear"
    },
    "exec": "node -r dotenv/config -r ts-node/register",
    "ext": "ts",
    "watch": [
      "src",
      ".env",
      "package.json",
      "schema.prisma",
      "tsconfig.json"
    ]
  }
}
